<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="365dp"
    android:layout_height="285dp"
    android:layout_gravity="center"
    android:background="@drawable/infopopup">

    <TextView
        android:id="@+id/lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="40dp"

        android:fontFamily="@font/segoesemibold"
        android:text="LOCK NAME"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textView_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="103dp"

        android:fontFamily="@font/segoesemibold"
        android:text="Mode"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="23dp" />

    <TextView
        android:id="@+id/textView_modeType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="141dp"

        android:fontFamily="@font/segoeregular"
        android:text="Pin and Card"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp" />

    <Button
        android:id="@+id/edit_button"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="213dp"
        android:layout_marginBottom="50dp"

        android:background="@drawable/rectanglebutton"
        android:fontFamily="@font/segoesemibold"
        android:text="Edit Name"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp" />

    <Button
        android:id="@+id/mode_button"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="66dp"
        android:layout_marginRight="-272dp"
        android:layout_marginBottom="50dp"
        android:layout_toLeftOf="@id/edit_button"
        android:background="@drawable/rectanglebutton"
        android:fontFamily="@font/segoesemibold"
        android:text="Change Mode"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp" />


</RelativeLayout>