<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:padding="5dp"
    android:background="@drawable/main_backgroundv2">

    <TextView
        android:id="@+id/textView_connectTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="135dp"

        android:text="CONNECT YOUR LOCK WITH THIS CODE"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="@font/segoesemibold"
        android:textSize="19dp"/>

    <TextView
        android:id="@+id/code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="174dp"
        android:layout_marginEnd="35dp"
        android:fontFamily="@font/segoesemibold"
        android:paddingLeft="10dp"
        android:text="452136"
        android:textSize="45dp" />

    <TextView
        android:id="@+id/countdown_timer"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_below="@+id/code"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="44dp"
        android:text="5:00"
        android:textColor="@color/timer"
        android:layout_toEndOf="@+id/textView_instruction"
        android:textSize="23dp" />

    <TextView
        android:id="@+id/textView_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/code"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/segoeregular"
        android:text="This code will expire in:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22dp" />

</RelativeLayout>