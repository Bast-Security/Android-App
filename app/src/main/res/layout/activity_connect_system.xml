<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:padding="5dp"
    android:background="@drawable/main_backgroundv2">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="125dp"
        android:paddingBottom="15dp"
        android:text="@string/system_connect_title"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="@font/segoeuiblack"
        android:textSize="26sp"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="35dp"
        android:ems="10"
        android:hint="System Name"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:paddingBottom="15dp" />

    <Button
        android:id="@+id/add_button"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="254dp"
        android:layout_marginTop="266dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/rectanglebutton"
        android:fontFamily="@font/segoesemibold"
        android:text="@string/add_button"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp" />

</RelativeLayout>